/* pages/detail/detail.wxss */

.list {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.list-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pic {
  width: 100%;
  margin: 0 0 20rpx 0;
}

.img {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
}

.list-info {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.content {
  font-size: 27rpx;
}

.share {
  width: 60rpx;
  height: 60rpx;
  margin: 0;
  padding: 0;
}

.share::after {
  border: 0;
}

.share .share-img {
  margin: 0;
  width: 60rpx;
  height: 60rpx;
}

.reply{
  margin-left: 40rpx;
}

/* 音乐播放按钮样式 */

.music {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx auto;
}

.music-pic {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.common-item {
  font-size: 28rpx;
  border-bottom: 1px solid #666;
  padding-bottom: 10rpx;
}

.common-info {
  padding: 10rpx;
}

.common-con {
  text-indent: 2em;
}

.common-publish input {
  padding-bottom: 100rpx;
}
